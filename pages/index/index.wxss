page {
  background: #f1f1f4;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.top {
  padding: 35rpx;
  color: #828282;
  font-size: 38rpx;
  text-align: left;
}

.top .right {
  flex-grow: 1;
}

.top .right:active, .top .left:active {
  color: #111;
}

.content {
  position: relative;
  flex-grow: 1;
  padding: 35rpx;
}

.swiper {
  height: 870rpx;
}

swiper-item {
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}

.notice {
  padding: 10rpx 35rpx;
  background: #ffdfdf;
  color: #d74646;
  font-size: 32rpx;
  height: 60rpx;
  overflow: hidden;
}

.message {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item {
  position: relative;
  width: 100%;
  height: 700rpx;
  background: #fff;
  border: #d9d9da solid 1rpx;
  border-top: #fea800 solid 5rpx;
  margin-top: 70rpx;
}

.item .head {
  position: absolute;
  top: 0;
  left: 50%;
  width: 128rpx;
  height: 128rpx;
  border-radius: 100%;
  transform: translate3d(-50%, -50%, 0);
}

.item .super {
  position: absolute;
  top: 0;
  left: 0;
  width: 80rpx;
  height: 80rpx;
  font-size: 26rpx;
  color: #fff;
}

.item .super .triangle {
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 40rpx;
  border-color: #fea800 transparent transparent #fea800;
}

.item .super text {
  transform: rotate3d(0, 0, 1, -45deg);
  position: absolute;
  top: 10rpx;
}

.item .title {
  margin-top: 60rpx;
  font-size: 40rpx;
  font-weight: bold;
  line-height: 2;
}

.item .time {
  font-size: 32rpx;
  color: #b2b2b2;
  line-height: 2;
}

.item .list {
  margin-top: 60rpx;
  font-size: 30rpx;
  max-width: 90%;
}

.money {
  overflow: hidden;
  margin: 20rpx 0;
}

.dot {
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  border: 1rpx solid #d1d1d1;
  background: transparent;
  margin-right: 30rpx;
  position: relative;
}

.btn {
  height: 120rpx;
}

.btn view {
  font-size: 38rpx;
  color: #fff;
}

.btn .progress {
  background: #368ce6;
  height: 100%;
  line-height: 100%;
}

.btn .claim {
  background: #3ec034;
  height: 100%;
  line-height: 100%;
}

.info text {
  color: #b2b2b2;
}

.logo-bg {
  width: 486rpx;
  height: 279rpx;
  position: absolute;
  bottom: 0;
  z-index: 1;
}

.info {
  line-height: 1.5;
}

.tips {
  height: 200rpx;
}

.icon-weep {
  font-size: 100rpx;
}

.icon-user {
  margin-right: 10rpx;
  font-size: 38rpx;
}
